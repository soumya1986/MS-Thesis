<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="iitd.ee.ms.broid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="iitd.ee.ms.broid.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="iitd.ee.ms.broid.PhoneCallActivity"
            android:label="@string/title_activity_phone_call"
            android:parentActivityName="iitd.ee.ms.broid.MainActivity" >
            <meta-data
                android:name="adroid.support.PARENT_ACTIVITY"
                android:value="iitd.ee.ms.broid.MainActivity" />
        </activity>
        <activity
            android:name="iitd.ee.ms.broid.MessagingActivity"
            android:label="@string/title_activity_messaging" >
        </activity>
        <activity
            android:name="iitd.ee.ms.broid.MusicActivity"
            android:label="@string/title_activity_music" >
        </activity>
    </application>

</manifest>
